p#notice = notice

.activities
  h1 Atividade

  - if @activities.size == 0
    .p Não existem atividades

  table
    thead
      tr
        th Descrição
        th Créditos
        th Tipo de atividade
        th
        th

    tbody
      - @activities.each do |activity|
        tr
          td = link_to activity.description, edit_activity_path(activity)
          td = activity.credit
          td = activity.activity_type.description
          td = link_to 'Mostrar', activity
          td#destoy = link_to image_tag('Delete-24'), activity, data: {:confirm => 'Tem certeza?' }, :method => :delete
  br

  = link_to 'Nova atividade', new_activity_path, :class => "waves-effect green btn-large"