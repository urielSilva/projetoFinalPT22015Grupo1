.activity_types
  h1 Tipos de Atividade

  - if @activity_types.size == 0
          .p Não existem tipos de atividades

  table
    thead
      tr
        th Descrição
        th
        th
        th


    tbody.fundo_cinza
      - @activity_types.each do |activity_type|
        tr
          td = link_to activity_type.description, edit_activity_type_path(activity_type)
          td = link_to 'Mostrar', activity_type
          td = link_to 'Destruir', activity_type, data: {:confirm => 'Tem certeza?'}, :method => :delete

  br

  = link_to 'Novo tipo de atividade', new_activity_type_path
